<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_marginLeft="150dp"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="I developed a quiz application during my college years as a project assignment. It is a work-in-progress and not the final product. The quiz app aims to test users' knowledge in various subjects and features a user-friendly interface for an engaging experience."
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact:"
        android:textSize="20dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="430dp" />

    <ImageView
        android:layout_marginTop="500dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/instalogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/instagram"
        android:clickable="true"
        android:onClick="openInstagram"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_marginTop="490dp"
        android:layout_marginLeft="250dp"
        android:id="@+id/fblogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/facebook"
        android:clickable="true"
        android:onClick="openFacebook"
        tools:ignore="MissingConstraints" />

</RelativeLayout>